<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Version>0.20.0</Version>
    <Description>This package adds support for serializing and deserializing valigator types to Newtonsoft.Json.</Description>
    <Copyright>Copyright Â© 2019 Johannes Moersch</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Authors>Johannes Moersch</Authors>
    <Product>Valigator</Product>
    <PackageProjectUrl>https://github.com/JohannesMoersch/Valigator</PackageProjectUrl>
    <PackageTags>validation</PackageTags>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Functional.Primitives" Version="1.10.0" />
    <PackageReference Include="Microsoft.CSharp" Version="4.5.0" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Valigator.Core\Valigator.Core.csproj" />
  </ItemGroup>

</Project>
